<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Neutron\Plugin\ShowCaseBundle\Entity\AbstractShowCase">   
	     
        <property name="title">
        	<constraint name="NotBlank">
                <option name="message">title.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">title.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">title.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>    
    </class>
    
    <class name="Neutron\Plugin\ShowCaseBundle\Entity\AbstractProject">
    
    	<constraint name="Neutron\ComponentBundle\Validator\Constraint\UniqueTranslatableProperty">
	        <option name="property">slug</option>
	        <option name="enableSlugFilter">true</option>
	        <option name="message">slug.already_used</option>
	        <option name="groups">
	        	<value>default</value>
	        </option>
	    </constraint>
    
        <property name="title">
        	<constraint name="NotBlank">
                <option name="message">title.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">title.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">title.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="slug">
			 
			<constraint name="NotBlank">
		        <option name="message">slug.blank</option>
		        <option name="groups">
		       	    <value>default</value>
		        </option>
		    </constraint>
		    
		    <constraint name="MinLength">
		        <option name="limit">2</option>
		        <option name="message">slug.short</option>
		        <option name="groups">
		            <value>default</value>
		        </option>
		    </constraint>
		    <constraint name="MaxLength">
		        <option name="limit">255</option>
		        <option name="message">slug.long</option>
		        <option name="groups">
		            <value>default</value>
		        </option>
		    </constraint>
		</property>
		
		<property name="description">
        	<constraint name="NotBlank">
                <option name="message">description.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">description.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">description.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
		<property name="content">
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">content.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
		<property name="projectDate">
			<constraint name="NotBlank">
                <option name="message">projectDate.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="Date">
                <option name="message">date.invalid</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="clientName">
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">clientName.short</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">clientName.long</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="projectUrl">
            <constraint name="Url">
                <option name="message">projectUrl.invalid</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
        <property name="template">
        	<constraint name="NotBlank">
                <option name="message">template.blank</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
     
        <property name="images">
        	<constraint name="Neutron\Bundle\FormBundle\Validator\Constraint\MultiImageEmpty">
                <option name="validateMeta">true</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
            
        	<constraint name="Count">
                <option name="min">1</option>
                <option name="max">20</option>
                <option name="minMessage">images.minMessage</option>
                <option name="maxMessage">images.maxMessage</option>
                <option name="groups">
                    <value>default</value>
                </option>
            </constraint>
        </property>
        
    </class>

</constraint-mapping>
